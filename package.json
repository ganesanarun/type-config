{
  "name": "@snow-tzu/config-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Spring Boot-inspired configuration management for Node.js",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt --topological-dev run build",
    "build:clean": "yarn clean && yarn build",
    "test": "yarn workspaces foreach -Apt run test",
    "lint": "yarn workspaces foreach -Apt run lint",
    "clean": "yarn workspaces foreach -Apt run clean && find . -name 'tsconfig.tsbuildinfo' -delete && rm -rf node_modules",
    "publish:packages": "yarn workspaces foreach -Apt --no-private yarn publish --access public"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^30.2.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=3.0.0"
  },
  "packageManager": "yarn@4.0.2"
}
